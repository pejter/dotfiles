!Xcursor.size:  48
Xft.dpi:       96
Xft.antialias: true
Xft.rgba:      rgb
Xft.lcdfilter: lcddefault
Xft.hinting:   true
Xft.autohint:  0
Xft.hintstyle: hintslight

#define t_transparent #00000000
#define t_background  #50424242
#define t_black       #1A1F16
#define t_grey        #424242
#define t_red         #C91010
#define t_red_bright  #D34610
#define t_green       #4EBA4F
#define t_yellow      #F2C100
#define t_orange      #FE9D00
#define t_blue        #219AB2
#define t_blue_bright #1780D2
#define t_purple      #41299B
#define t_cyan        #97BEC6
#define t_white       #E0E1E2

URxvt.font: xft:Source Code Pro:size=9,xft:FontAwesome:size=9
URxvt.scrollBar: False
URxvt.saveLines: 2000
URxvt.urgentOnBell: True
URxvt.cursorBlink: True
!URxvt.transparent: True
URxvt.fading: 30
URxvt.fadeColor: [00]t_white
URxvt.shading: 20
URxvt.depth: 32
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard,matcher
URxvt.matcher.rend.0: Uline Bold
URxvt.url-launcher: firefox-developer

*.foreground: t_white
*.background: t_black
*.cursorColor: t_white

URxvt.background: [80]#111111


! Black / Grey
*.color0:       t_black
*.color8:       t_grey

! Red / Bright Red
*.color1:       t_red
*.color9:       t_red_bright

! Green + Bright Green
*.color2:       t_green
*.color10:      t_green

! Yellow (Orange) + Bright Yellow (Yellow)
*.color3:       t_yellow
*.color11:      t_yellow

! Blue + Bright Blue
*.color4:       t_blue
*.color12:      t_blue_bright

! Magenta (Purple) + Bright Magenta
*.color5:       t_purple
*.color13:      t_purple

! Cyan (Aqua) + Bright Cyan
*.color6:       t_cyan
*.color14:      t_cyan

! Light Grey (Selection) + White (Current Line)
*.color7: t_white
*.color15: t_white


rofi.color-enabled: true
rofi.fuzzy: true
rofi.hide-scrollbar: true
!States: bg, fg, bgalt, hlbg, hlfg
rofi.color-normal: t_transparent,t_white,t_transparent,t_transparent,t_blue
rofi.color-urgent: t_transparent,t_red,t_transparent,t_transparent,t_blue
rofi.color-active: t_transparent,t_transparent,t_transparent,t_blue
!states: background, border
rofi.color-window: t_background,t_grey

rofi.separator-style: solid
rofi.sidebar-mode: false
rofi.bw: 0
rofi.columns: 1
rofi.padding: 300
rofi.eh: 1
!rofi.line-margin: 35

!rofi.fullscreen: true
rofi.xoffset: 0
rofi.yoffset: -50
!rofi.opacity: 100
!rofi.fake-transparency: false
rofi.location: 2
rofi.width: 100
rofi.font: Source Code Pro 14
rofi.lines: 9

rofi.border-radius: 1
